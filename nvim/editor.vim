" Hybrid relative line number
set number relativenumber

" Always show sign column
set signcolumn=yes

" Language
let g:myLang=0
let g:myLangList=['nospell', 'en_us,ru_yo']

" Show current cursor line
set cursorline

" For icons
set encoding=UTF-8

" Tabs
set tabstop=2
set shiftwidth=2

" Clipboard
set clipboard+=unnamedplus
